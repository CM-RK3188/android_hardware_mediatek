<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:background="@drawable/bg"
	>
	
<ScrollView 
    android:layout_width="fill_parent"
    android:id="@+id/advance_wifi_table"
    android:layout_height="wrap_content" 
    >
	<LinearLayout android:id="@+id/advance_wifi_rx"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">


		<TableLayout
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="3dip" android:stretchColumns="1">

			<TableRow android:id="@+id/advance_wifi_rx"
				android:layout_width="fill_parent" android:paddingTop="5dip"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/WiFi_Rx_Channel_Text" android:text="@string/wifi_channel_text"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:paddingTop="12dip" android:textStyle="bold">
				</TextView>
				<Spinner android:id="@+id/WiFi_Rx_Channel_Spinner"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="18sp" android:layout_centerHorizontal="true">
				</Spinner>
			</TableRow>

			<TableRow android:id="@+id/advance_wifi_rx"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:id="@+id/WiFi_Rx_Bandwidth" android:text="@string/wifi_bandwidth"
					android:layout_width="fill_parent" android:paddingTop="12dip"
					android:layout_height="wrap_content" android:textStyle="bold">
				</TextView>
				<Spinner android:id="@+id/WiFi_Rx_Bandwidth_Spinner"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textSize="18sp" android:singleLine="true">
				</Spinner>
			</TableRow>

			<TableRow 
				android:id="@+id/advance_bt_table_row_rx"
				android:layout_width="fill_parent" 
				android:paddingTop="20dip"
				android:layout_height="wrap_content">        	
        	</TableRow>
        	
        	<View
            	android:layout_width="fill_parent"
            	android:layout_height="2dip"
            	android:background="@color/gray" >
        	</View>
        	
			<TableRow android:id="@+id/advance_wifi_rx"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:id="@+id/WiFi_FCS_Text" android:text="@string/wifi_fcs_text"
					android:layout_width="fill_parent" android:paddingTop="12dip"
					android:layout_height="wrap_content" android:textStyle="bold">
				</TextView>
				<TextView android:id="@+id/WiFi_FCS_Content" android:text="@string/wifi_fcs_content"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:singleLine="true">
				</TextView>
			</TableRow>
			
			<View
            	android:layout_width="fill_parent"
           		android:layout_height="1dip"
           		android:background="@color/light_gray" >
        	</View>
			
			<TableRow android:id="@+id/advance_wifi_rx"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:id="@+id/WiFi_Rx_Text" android:text="@string/wifi_rx_text"
					android:layout_width="fill_parent" android:paddingTop="12dip"
					android:layout_height="wrap_content" android:textStyle="bold">
				</TextView>
				<TextView android:id="@+id/WiFi_Rx_Content" android:text="@string/wifi_rx_content"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:singleLine="true">
				</TextView>
			</TableRow>
			
			<View
            	android:layout_width="fill_parent"
           		android:layout_height="1dip"
           		android:background="@color/light_gray" >
        	</View>
			
			<TableRow android:id="@+id/advance_wifi_rx"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:id="@+id/WiFi_PER_Text" android:text="@string/wifi_per_text"
					android:layout_width="fill_parent" android:paddingTop="12dip"
					android:layout_height="wrap_content" android:textStyle="bold">
				</TextView>
				<TextView android:id="@+id/WiFi_PER_Content" android:text="@string/wifi_per_content"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:singleLine="true">
				</TextView>
			</TableRow>
			
			<View
            	android:layout_width="fill_parent"
            	android:layout_height="2dip"
            	android:background="@color/gray" >
        	</View>
        	
		</TableLayout>

		<TableLayout 
			android:layout_width="fill_parent" android:paddingTop="10dip"
			android:layout_height="wrap_content">

			<TableRow android:id="@+id/advance_wifi_rx"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<Button android:id="@+id/WiFi_Start_Rx" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:text="@string/wifi_go">
				</Button>

				<Button android:id="@+id/WiFi_Stop_Rx" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:text="@string/wifi_stop">
				</Button>
			</TableRow>
		</TableLayout>
	
	</LinearLayout>
</ScrollView>
</FrameLayout>